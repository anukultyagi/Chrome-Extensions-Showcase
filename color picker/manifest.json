{
  "manifest_version": 3,
  "name": "color picker",
  "description": "Extension for picking color from website.",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/color-picker-16.png",
    "32": "images/color-picker-32.png",
    "64": "images/color-picker-64.png",
    "128": "images/color-picker-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/color-picker-16.png",
      "32": "images/color-picker-32.png",
      "64": "images/color-picker-64.png",
      "128": "images/color-picker-128.png"
    }
  },
  "permissions": ["activeTab", "scripting"]
}
